<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageViewRow"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/googleg_standard_color_18" />

        <TextView
            android:id="@+id/textViewJobTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/imageViewRow"
            android:layout_toRightOf="@+id/imageViewRow"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewJobTitle"
            android:layout_toEndOf="@+id/imageViewRow"

            android:layout_toRightOf="@+id/imageViewRow"
            android:padding="4dp"
            android:text="Type: " />

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewJobTitle"
            android:layout_toEndOf="@+id/textView8"

            android:layout_toRightOf="@+id/textView8"
            android:padding="4dp"
            android:text=""
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewType"
            android:layout_toEndOf="@+id/imageViewRow"
            android:layout_toRightOf="@+id/imageViewRow"

            android:padding="4dp"
            android:text="Location: " />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textViewType"
            android:layout_toRightOf="@+id/textView8"

            android:padding="4dp"
            android:text=""
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewRow"
            android:layout_marginTop="-2dp"
            android:padding="4dp"
            android:text="Posted On" />

        <TextView
            android:id="@+id/textViewPostTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewRow"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/textView"
            android:padding="4dp"
            android:text="Time Date" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>